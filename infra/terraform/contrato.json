{
  "openapi": "3.0.1",
  "info": {
    "title": "API Mix Fast",
    "description": "API fast food para controle de pedidos (MIX-FAST)",
    "contact": {
      "name": "Grupo 36 - FIAP"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:9080",
      "description": "URL do servidor local"
    }
  ],
  "paths": {
    "/v1/categorias": {
      "get": {
        "tags": [
          "Categorias"
        ],
        "summary": "Buscar todas categorias cadastradas",
        "operationId": "buscarTodas_1",
        "security" : [ {
          "mixfast-authorizer" : [ ]
        } ],
        "x-amazon-apigateway-integration": {
          "responses": {
            "default": {
              "statusCode": "200"
            }
          },
          "uri": "http://${vpc_nlb}:${port}/v1/categorias",
          "passthroughBehavior": "when_no_match",
          "connectionType": "VPC_LINK",
          "connectionId": "${vpc_link}",
          "httpMethod": "GET",
          "type": "http_proxy"
        },
        "responses": {
          "200": {
            "description": "Lista de categorias preenchida com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CategoriaHttp"
                  }
                }
              }
            }
          },
          "204": {
            "description": "Lista de categorias em branco",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "409": {
            "description": "Erro na comunicação com o banco de dados",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Categorias"
        ],
        "summary": "Cadastrar uma nova categoria",
        "operationId": "cadastrar_3",
        "security" : [ {
          "mixfast-authorizer" : [ ]
        } ],
        "x-amazon-apigateway-integration": {
          "responses": {
            "default": {
              "statusCode": "200"
            }
          },
          "uri": "http://${vpc_nlb}:${port}/v1/categorias",
          "passthroughBehavior": "when_no_match",
          "connectionType": "VPC_LINK",
          "connectionId": "${vpc_link}",
          "httpMethod": "POST",
          "type": "http_proxy"
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CategoriaHttp"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Categoria cadastrada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CategoriaHttp"
                }
              }
            }
          },
          "409": {
            "description": "Erro na comunicação com o banco de dados",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao cadastrar uma nova categoria com os dados informados",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/hostcheck": {
      "get": {
        "tags": [
          "Host Check"
        ],
        "operationId": "checkHost",
        "security" : [ {
          "mixfast-authorizer" : [ ]
        } ],
        "x-amazon-apigateway-integration": {
          "responses": {
            "default": {
              "statusCode": "200"
            }
          },
          "uri": "http://${vpc_nlb}:${port}/hostcheck",
          "passthroughBehavior": "when_no_match",
          "connectionType": "VPC_LINK",
          "connectionId": "${vpc_link}",
          "httpMethod": "GET",
          "type": "http_proxy"
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CategoriaHttp": {
        "required": [
          "nome"
        ],
        "type": "object",
        "properties": {
          "codigo": {
            "type": "string"
          },
          "nome": {
            "type": "string"
          }
        }
      },
      "ProdutoHttp": {
        "required": [
          "nome"
        ],
        "type": "object",
        "properties": {
          "codigo": {
            "type": "string"
          },
          "nome": {
            "type": "string"
          },
          "descricao": {
            "type": "string"
          },
          "preco": {
            "type": "number"
          },
          "categoria": {
            "$ref": "#/components/schemas/CategoriaHttp"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "dateTime": {
            "type": "string",
            "example": "dd/MM/yyyy hh:MM:ss"
          },
          "code": {
            "type": "integer",
            "format": "int32",
            "example": 0
          },
          "status": {
            "type": "string",
            "example": "OK",
            "enum": [
              "100 CONTINUE",
              "101 SWITCHING_PROTOCOLS",
              "102 PROCESSING",
              "103 EARLY_HINTS",
              "103 CHECKPOINT",
              "200 OK",
              "201 CREATED",
              "202 ACCEPTED",
              "203 NON_AUTHORITATIVE_INFORMATION",
              "204 NO_CONTENT",
              "205 RESET_CONTENT",
              "206 PARTIAL_CONTENT",
              "207 MULTI_STATUS",
              "208 ALREADY_REPORTED",
              "226 IM_USED",
              "300 MULTIPLE_CHOICES",
              "301 MOVED_PERMANENTLY",
              "302 FOUND",
              "302 MOVED_TEMPORARILY",
              "303 SEE_OTHER",
              "304 NOT_MODIFIED",
              "305 USE_PROXY",
              "307 TEMPORARY_REDIRECT",
              "308 PERMANENT_REDIRECT",
              "400 BAD_REQUEST",
              "401 UNAUTHORIZED",
              "402 PAYMENT_REQUIRED",
              "403 FORBIDDEN",
              "404 NOT_FOUND",
              "405 METHOD_NOT_ALLOWED",
              "406 NOT_ACCEPTABLE",
              "407 PROXY_AUTHENTICATION_REQUIRED",
              "408 REQUEST_TIMEOUT",
              "409 CONFLICT",
              "410 GONE",
              "411 LENGTH_REQUIRED",
              "412 PRECONDITION_FAILED",
              "413 PAYLOAD_TOO_LARGE",
              "413 REQUEST_ENTITY_TOO_LARGE",
              "414 URI_TOO_LONG",
              "414 REQUEST_URI_TOO_LONG",
              "415 UNSUPPORTED_MEDIA_TYPE",
              "416 REQUESTED_RANGE_NOT_SATISFIABLE",
              "417 EXPECTATION_FAILED",
              "418 I_AM_A_TEAPOT",
              "419 INSUFFICIENT_SPACE_ON_RESOURCE",
              "420 METHOD_FAILURE",
              "421 DESTINATION_LOCKED",
              "422 UNPROCESSABLE_ENTITY",
              "423 LOCKED",
              "424 FAILED_DEPENDENCY",
              "425 TOO_EARLY",
              "426 UPGRADE_REQUIRED",
              "428 PRECONDITION_REQUIRED",
              "429 TOO_MANY_REQUESTS",
              "431 REQUEST_HEADER_FIELDS_TOO_LARGE",
              "451 UNAVAILABLE_FOR_LEGAL_REASONS",
              "500 INTERNAL_SERVER_ERROR",
              "501 NOT_IMPLEMENTED",
              "502 BAD_GATEWAY",
              "503 SERVICE_UNAVAILABLE",
              "504 GATEWAY_TIMEOUT",
              "505 HTTP_VERSION_NOT_SUPPORTED",
              "506 VARIANT_ALSO_NEGOTIATES",
              "507 INSUFFICIENT_STORAGE",
              "508 LOOP_DETECTED",
              "509 BANDWIDTH_LIMIT_EXCEEDED",
              "510 NOT_EXTENDED",
              "511 NETWORK_AUTHENTICATION_REQUIRED"
            ]
          },
          "errors": {
            "type": "array",
            "example": [
              "Mensagem do Erro"
            ],
            "items": {
              "type": "string",
              "example": "[\"Mensagem do Erro\"]"
            }
          }
        }
      },
      "FormaPagamentoHttp": {
        "required": [
          "descricao"
        ],
        "type": "object",
        "properties": {
          "codigo": {
            "type": "string"
          },
          "descricao": {
            "type": "string"
          }
        }
      },
      "ClienteHttp": {
        "required": [
          "cpf",
          "email",
          "nome"
        ],
        "type": "object",
        "properties": {
          "codigo": {
            "type": "string"
          },
          "nome": {
            "type": "string"
          },
          "cpf": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        }
      },
      "WebhookHttp": {
        "type": "object",
        "properties": {
          "codigo_pedido": {
            "type": "string"
          },
          "status_pagamento": {
            "type": "string"
          }
        }
      },
      "Links": {
        "type": "object",
        "additionalProperties": {
          "$ref": "#/components/schemas/Link"
        }
      },
      "PedidoHttp": {
        "required": [
          "forma_pagamento",
          "itens"
        ],
        "type": "object",
        "properties": {
          "codigo": {
            "type": "string"
          },
          "cliente": {
            "$ref": "#/components/schemas/ClienteHttp"
          },
          "itens": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PedidoProdutoHttp"
            }
          },
          "fila": {
            "type": "integer",
            "format": "int32"
          },
          "_links": {
            "$ref": "#/components/schemas/Links"
          },
          "forma_pagamento": {
            "$ref": "#/components/schemas/FormaPagamentoHttp"
          },
          "valor_total": {
            "type": "number"
          },
          "status_pedido": {
            "type": "string"
          },
          "status_pagamento": {
            "type": "string"
          },
          "qr_code": {
            "type": "string"
          }
        }
      },
      "PedidoProdutoHttp": {
        "required": [
          "produto",
          "quantidade"
        ],
        "type": "object",
        "properties": {
          "produto": {
            "type": "string"
          },
          "quantidade": {
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "observacao": {
            "type": "string"
          }
        }
      },
      "Link": {
        "type": "object",
        "properties": {
          "href": {
            "type": "string"
          },
          "hreflang": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "deprecation": {
            "type": "string"
          },
          "profile": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "templated": {
            "type": "boolean"
          }
        }
      }
    }
  }
}